#create account class with 2 attribute - balance & account number create method for debit,credit,and printing the balance

class Account:
    def __init__(self, bal, acc):
        self.balance = bal
        self.acc_num = acc
    
    # Debit method
    def debit(self, amount):
        self.balance -= amount
        print("Rs.", amount, "was debited")
        print( "total balance= ", self.get_balance())

    # Credit method
    def credit(self, amount):
        self.balance += amount
        print("Rs.", amount, "was credited")
        print( "total balance= ", self.get_balance())
        
    def get_balance(self):
        return self.balance

# Creating an instance of Account
acc1 = Account(10000, 12345)
acc1.debit(1000)
acc1.credit(500)
acc1.credit(40000)
